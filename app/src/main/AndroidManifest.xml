<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cashless">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="CASH_LESS"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Transactions.TransferActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Transactions.LatestTransactionsActivity" />
        </activity>
        <activity android:name=".Transactions.ScanningActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Transactions.LatestTransactionsActivity" />
        </activity>
        <activity android:name=".Transactions.TransactionLogActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Transactions.LatestTransactionsActivity" />
        </activity>
        <activity android:name=".Transactions.NewTransactionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Transactions.LatestTransactionsActivity" />
        </activity>
        <activity android:name=".Controllers.RegisterActivity" />
        <activity android:name=".Controllers.MerchantRegisterActivity" />
        <activity android:name=".Controllers.StudentRegisterActivity" />
        <activity android:name=".Controllers.LoginActivity" />
        <activity android:name=".Controllers.MainActivity" />
        <activity android:name=".Transactions.LatestTransactionsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>